{
  "compilerOptions": {
    "lib": ["es2015", "dom", "es2016", "es2017", "es2018", "es2019", "es2020", "es2021", "esnext"],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src"]
}